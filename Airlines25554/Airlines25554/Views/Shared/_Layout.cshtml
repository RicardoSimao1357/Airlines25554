<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airlines25554</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/component-chosen.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>


<body>


    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm   box-shadow " id="nvbar">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Airlines25554 <i class="fa-solid fa-wind"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav flex-grow-1">

                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Employees" asp-action="Index">
                                        Employees <i class="fa-solid fa-user-pen"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="AirPlanes" asp-action="Index"> Airplanes <i class="fa-solid fa-plane"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Countries" asp-action="Index">Destinations <i class="fa-solid fa-map-pin"></i></a>
                                </li>
                            </ul>


                            <ul class="nav navbar-nav navbar-right">
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="ChangeUser"><i class="far fa-user"></i> @this.User.Identity.Name</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Logout">Logout <i class="fa-solid fa-arrow-right-to-bracket"> </i> </a>
                                </li>
                            </ul>

                        }
                        else if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Customer")))
                        {


                            <ul class="navbar-nav flex-grow-1">


                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Bookings" asp-action="Index"> Flights <i class="fa-solid fa-plane"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Customers" asp-action="Historic">Historic <i class="fa-solid fa-file-contract"></i></a>
                                </li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right">


                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                                        @this.User.Identity.Name <i class="fa-regular fa-circle-user"></i>
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Edit" asp-route-username="@this.User.Identity.Name"> <i class="fa-solid fa-user-pen"></i> Profile </a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword"> <i class="fa-solid fa-lock"></i> Password </a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout"> <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout  </a>

                                    </div>
                                </li>


                            </ul>
                        }
                        else if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Employee")))
                        {
                            <ul class="navbar-nav flex-grow-1">


                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Flights" asp-action="Index"> Flights <i class="fa-solid fa-plane"></i></a>
                                </li>

                            </ul>

                            <ul class="nav navbar-nav navbar-right">


                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                                        @this.User.Identity.Name <i class="fa-regular fa-circle-user"></i>
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Edit" asp-route-username="@this.User.Identity.Name"> <i class="fa-solid fa-user-pen"></i> Profile </a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword"> <i class="fa-solid fa-lock"></i> Password </a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout"> <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout  </a>

                                    </div>
                                </li>

                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav flex-grow-1">
                            </ul>

                            <ul class="nav navbar-nav navbar-right">

                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login">  Login <i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Register">  Register <i class="fa-solid fa-user-plus"></i></a>
                                </li>
                            </ul>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

</body>



<footer class=" footer  text-muted" style="background:#0c234c">
    <div class="container text-white">
        &copy; 2022 - Ricardo Simão -  <a asp-area="" asp-controller="Home" asp-action="About"> <b>More About Me</b> </a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"
        integrity="sha512-rMGGF4wg1R73ehtnxXBt5mbUfN9JUJwbk21KMlnLZDJh7BkPmeovBuddZCENJddHYYMkCh9hPFnPmS9sspki8g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)




</html>
