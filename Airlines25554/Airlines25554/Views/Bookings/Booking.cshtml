@model Airlines25554.Models.PassengerViewModel

@{
    ViewData["Title"] = "Booking";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />
<form asp-action="ShowTicket">
    <br />
    <br />
    <br />
    <div style="text-align:center">
        <a class="btn btn-outline-info" asp-action="Index">Cancel</a>
    
        <input type="hidden" asp-for="FlightId" />
        <label>Pick a class:</label>
       @* <select id="class" asp-for="Class" asp-items="Model.Classes" class="selectclass"></select>*@
        <br />
        <br />
        <br />
    </div>



    <div class="row" align="center">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Seat)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ClassName)
                                </th>
                      

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.TotalSeatsList)
                            {
                                <tr>
                                    <td class="bg-info">
                                        @Html.DisplayFor(modelItem => item.Seat)
                                    </td>
                                    <td class="bg-info">
                                        @Html.DisplayFor(modelItem => item.Class)

                                  
                                    </td>
                       
                                    <td id="@Model">
                                        <a asp-controller="Bookings" asp-action="ShowTicket" asp-route-email="@Model.Email"
                                                                                             asp-route-flightId="@Model.FlightId"
                                                                                             asp-route-id="@item.Id"
                                                                                             asp-route-class="@item.Class"
                                                                                             asp-route-firstName="@Model.FirstName" 
                                                                                             asp-route-lastName="@Model.LastName" 
                                                                                             asp-route-passportId="@Model.PassportId"> 
                                                                                             Confirm</a>
                                        <input type="hidden" asp-for="Email" />
                                        <input type="hidden" asp-for="@Model.FirstName" />
                                        <input type="hidden" asp-for="@Model.LastName" />
                                        <input type="hidden" asp-for="PassportId" />
                            
                   
                                        <input type="hidden" asp-for="FlightId" />
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</form>














@section Scripts{
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}


