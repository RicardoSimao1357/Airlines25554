@model IEnumerable<Airlines25554.Data.Entities.AirPlane>

@{
    ViewData["Title"] = "Index";
}

<h1>AirPlane list</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary"> Create New <i class="fa-solid fa-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Registration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirplaneModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EconomySeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecutiveSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstClassSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Registration)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.AirplaneModel)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFullPath))
                    {
                        <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto;">
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EconomySeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutiveSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstClassSeats)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
