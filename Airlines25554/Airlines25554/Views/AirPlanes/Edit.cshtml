@model Airlines25554.Models.AirPlaneViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Airplane</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <div class="form-group">
                <label asp-for="AirplaneModel" class="control-label"></label>
                <input asp-for="AirplaneModel" class="form-control" />
                <span asp-validation-for="AirplaneModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration" class="control-label"></label>
                <input asp-for="Registration" class="form-control" />
                <span asp-validation-for="Registration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EconomySeats" class="control-label"></label>
                <input asp-for="EconomySeats" class="form-control" />
                <span asp-validation-for="EconomySeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExecutiveSeats" class="control-label"></label>
                <input asp-for="ExecutiveSeats" class="form-control" />
                <span asp-validation-for="ExecutiveSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstClassSeats" class="control-label"></label>
                <input asp-for="FirstClassSeats" class="form-control" />
                <span asp-validation-for="FirstClassSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-arrow-left-long"></i> Back to List </a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt="Image"  style="width:300px;height:450px;max-width:100%;height:auto">
        }
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
