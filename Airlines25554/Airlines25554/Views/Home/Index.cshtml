@model Airlines25554.Models.SearchFlightViewModel
@{
    ViewData["Title"] = "Index";


}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" />



<style>
   
    
  

    .chosen-container-single {
        padding: 3.9px 1px;
        margin: 4.7px 0;
        border-radius: 6px;

    }


</style>



<body class="bgWelcome">

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="search">
       
            <div class="col1">

                <select id="single" asp-for="From" class="form-control form-control-chosen  " data-placeholder="From">
                    @{
                        foreach (var item in Model.Airports)
                        {
                                    <option></option>
                                    <option>@Html.DisplayFor(modelItem =>  item.Text)</option>
                        }
                    }
                </select>
  

                <select id="single"  asp-for="To" class="form-control form-control-chosen  " data-placeholder="To">
                    @{
                        foreach (var item in Model.Airports)
                        {
                                    <option></option>
                                    <option>@Html.DisplayFor(modelItem =>  item.Text)</option>
                        }
                    }
                </select>

            </div>

            <div class="col1">

                <input type="date" asp-for="Departure" class="dtpicker" value="@DateTime.Now" />

                <select asp-for="ClassId" asp-items="Model.Classes" class="form-control combo"></select>

            </div>

            <div class="col1">
                <button type="submit" id="btnSearch" class="btn">  <i class="fa-solid fa-magnifying-glass fa-2xl"></i></button>
            </div>

        </div>
    </form>

</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function () {
            $('.form-control-chosen').chosen();

        });

    </script>
}










