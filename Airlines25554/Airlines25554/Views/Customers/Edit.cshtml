@model Airlines25554.Models.CustomerViewModel

@{
    ViewData["Title"] = "Edit";
}

<style>

    body {
        background: linear-gradient(45deg, #eaeaea 33.33%, #007bff 66.66%, #0C234C 99.99%);
    }

</style>



<br />
<br />
<br />
<br />
<br />


<div class="containermain">
    <div class="title">
        Olá @this.User.Identity.Name <i class="fa-regular fa-circle-user"></i>
    </div>
    <div class="content">
        <form asp-action="Edit" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />

            <div class="user-details">

            <div class="input-box">
                <span asp-for="FirstName">First Name</span>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="input-box">
                <span asp-for="LastName">Last Name</span>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>


            <div class="input-box">
                <span asp-for="Address" class="control-label"></span>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="input-box">
                <span asp-for="PassportId" class="control-label"></span>
                <input asp-for="PassportId" class="form-control" />
                <span asp-validation-for="PassportId" class="text-danger"></span>
            </div>
            <div class="input-box">
                <span asp-for="ImageFile" class="control-label"></span>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">


        <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
